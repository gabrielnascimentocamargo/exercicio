# exercicio
trabalho de escola

#include <stdlib.h>
#include <stdio.h>
int main(void)
{
  
  int i,num,a=0,b=1000,contador=0;
  printf ("\n\ndigite numeros entre 1 e 1000 e 0 para sair\n\n");
  while (num!=0)
  {
    scanf ("%d",&num);
    contador = contador+1;

    if (num > a)
    {
      a = num;
    }

    if (num < b)
    {
      b = num;
    }

    if ((a>1000)||(b<0))
    {
      printf ("\t\t numero não registrado!");
      break;
    }
    printf ("\t\t %d é o maior numero digitado\n \t\t e %d o menor numero digitado\n \t\t contador esta em %d\n",a,b,contador);
  }
  printf ("\n\t\t fim do programa!");
  return 0;
}
